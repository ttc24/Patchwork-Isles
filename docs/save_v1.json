{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patchwork Isles Save File v1",
  "description": "Schema describing version 1 save files with player progress, quest state, and world context.",
  "type": "object",
  "required": ["version", "metadata", "state"],
  "properties": {
    "version": {"type": "integer", "const": 1},
    "metadata": {
      "type": "object",
      "required": [
        "schema",
        "version",
        "save_slot",
        "saved_at",
        "world_title",
        "world_seed",
        "active_area",
        "player_name"
      ],
      "properties": {
        "schema": {"type": "string", "enum": ["save_v1"]},
        "version": {"type": "integer", "const": 1},
        "save_slot": {"type": "string"},
        "saved_at": {"type": "string", "format": "date-time"},
        "world_title": {"type": ["string", "null"]},
        "world_seed": {"type": "integer"},
        "active_area": {"type": ["string", "null"]},
        "player_name": {"type": ["string", "null"]}
      },
      "additionalProperties": false
    },
    "state": {
      "type": "object",
      "required": ["current_node", "history", "player", "active_area", "world_seed"],
      "properties": {
        "current_node": {"type": ["string", "null"]},
        "history": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to", "choice"],
            "properties": {
              "from": {"type": ["string", "null"]},
              "to": {"type": ["string", "null"]},
              "choice": {"type": ["string", "null"]}
            },
            "additionalProperties": false
          }
        },
        "start_id": {"type": ["string", "null"]},
        "player": {
          "type": "object",
          "required": ["name", "hp", "tags", "traits", "inventory", "resources", "flags", "rep"],
          "properties": {
            "name": {"type": ["string", "null"]},
            "hp": {"type": "integer"},
            "tags": {"type": "array", "items": {"type": "string"}},
            "traits": {"type": "array", "items": {"type": "string"}},
            "inventory": {"type": "array", "items": {"type": "string"}},
            "resources": {
              "type": "object",
              "additionalProperties": {"type": "number"}
            },
            "flags": {
              "type": "object",
              "additionalProperties": {
                "type": ["string", "number", "boolean", "null"]
              }
            },
            "rep": {
              "type": "object",
              "additionalProperties": {
                "type": "integer",
                "minimum": -2,
                "maximum": 2
              }
            }
          },
          "additionalProperties": true
        },
        "active_area": {"type": ["string", "null"]},
        "world_seed": {"type": "integer"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
